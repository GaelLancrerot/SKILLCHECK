@using Microsoft.AspNetCore.Identity
@using FilRouge_Test_CodeFirst.Data
@using FilRouge_Test_CodeFirst.Models

@model UserViewModel

@{
    ViewData["Title"] = "CreateUser";
}

<h1 style="text-align : center">Créer Profile</h1>

<h4 style="text-align : center">Ajouter votre:</h4>
<hr />
<div class="container w-50" style="margin-top: 100px;" id="addQ">
    <div class="row align-items-center justify-content-center">
        <form asp-action="CreateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label">Votre nom</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Votre email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailConfirmed" class="control-label">Confirmer votre email</label>
                <input type="text" asp-for="EmailConfirmed" class="form-control" />
                <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
            </div>

@*            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label">Mots de passe</label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
*@

            <div class="form-group d-flex justify-content-between pt-4">
                <input type="submit" class="buttonAjout mb-3" />
                <div>
                    <a asp-action="Index" class="backButton mb-3">Retour à la liste</a>
                </div>
            </div>
            
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}