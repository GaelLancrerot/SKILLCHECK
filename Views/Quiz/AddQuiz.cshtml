@model QuizViewModel


@{
    ViewData["Title"] = "AddQuiz";
    
}

@*                  @foreach (var item in Model.AllLevel)
                {
                    item.LevelName.ToLower();
                }*@
<h1>AddQuiz</h1>

<h4>Quiz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuiz">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Quiz.Name" class="control-label"></label>
                <input asp-for="@Model.Quiz.Name" class="form-control" />
                <span asp-validation-for="@Model.Quiz.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Quiz.Code" class="control-label"></label>
                <input asp-for="@Model.Quiz.Code" class="form-control" />
                <span asp-validation-for="@Model.Quiz.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Quiz.Average" class="control-label"></label>
                <input asp-for="@Model.Quiz.Average" class="form-control" />
                <span asp-validation-for="@Model.Quiz.Average" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Quiz.Level" class="control-label"></label>
@*                <select asp-for="@Model.Quiz.Level" asp-items="@Model.AllLevel" class="form-control">
                    <option value="@Model.Quiz.Level" id="@Model.AllLevel">---- Choix Level ---- </option>
                </select>*@
                <select asp-for="@Model.Quiz.Level" name="@Model.Quiz.Level" id="@Model.Quiz.Level">
                    @foreach(var lvl in Model.AllLevel)
                    {
                        <option value="@lvl.Id"name="@Model.Quiz.Level" id="@Model.Quiz.Level">@lvl.LevelName</option>
                    }
                </select>
                <span asp-validation-for="@Model.Quiz.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="AddQuiz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
