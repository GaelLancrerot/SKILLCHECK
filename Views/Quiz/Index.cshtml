@model IEnumerable<FilRouge_Test_CodeFirst.Data.Entity.Quiz>



<h1 style ="text-align : center">Page des Quiz</h1>


<div class="container">
    <button type="button" class="myButton mb-6" onclick="window.location.href='@Url.Action("AddQuiz")'">
        Ajouter un quiz
    </button>
    <div class="row align-items-center">



        <table class="table table-hover table-striped table-light">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Average)
            </th>
            <th>
                Nom du level
            </th>
            <th>
                Nom du sujet
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr class="table">
                <td>
                                <a asp-controller="Passage" asp-action="Validation" asp-route-id="@item.QuizzId">
                    @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Average)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level.LevelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sujet.SujetName)
                </td>
                <td >

                    <a asp-controller="Passage" asp-action="FakeWelcome" asp-route-id="@item.QuizzId"><div class="buttonAjout2 ms-2">Fake Passage</div></a>
                    <a asp-action="EditQuiz" asp-route-id="@item.QuizzId"><div class="buttonAjout ms-2">Edit </div></a> 
                    <a asp-action="DetailQuiz" asp-route-id="@item.QuizzId"><div class="buttonAjout2 ms-2">Détails</div></a> 
                    <a asp-action="DeleteQuiz" asp-route-id="@item.QuizzId"><div class="buttonAjout3 ms-2">Supprimer</div></a>


                        </td>
                    </tr>
                }
            </tbody>
        </table>



    </div>
</div>